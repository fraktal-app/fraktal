{
    "canisters": {
        "fraktal-main": {
            "type": "azle",
            "main": "src/backend/index.ts",
            "custom": {
                "experimental": true,
                "assets": [
                    ["src/frontend/dist", "dist"],
                    ["src/scripts", "scripts"]
                ],
                "env": [
                    "CANISTER_ID_fraktal_main", 
                    "CANISTER_ID_database", 
                    "CANISTER_ID_trigger_engine"
                ],
                "build_assets": "npm run build"
            }
        },
        
        "database": {
            "type": "azle",
            "main": "src/database/index.ts",
            "custom": {
                "experimental": true,
                "env": [
                    "CANISTER_ID_fraktal_main", 
                    "CANISTER_ID_database", 
                    "CANISTER_ID_trigger_engine"
                ]
            }
        },

        "trigger-engine": {
            "type": "azle",
            "main": "src/trigger-engine/index.ts",
            "custom": {
                "experimental": true,
                "assets": [
                    ["src/scripts", "scripts"]
                ],
                "env": [
                    "CANISTER_ID_fraktal_main", 
                    "CANISTER_ID_database", 
                    "CANISTER_ID_trigger_engine"
                ]
            }
        }
    }
}